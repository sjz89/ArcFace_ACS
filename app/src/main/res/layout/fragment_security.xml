<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/qmui_config_color_background"
        android:fillViewport="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.daylight.arcface_acs.view.InfoItemView
                android:id="@+id/high_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/qmui_list_item_height"
                android:elevation="0.5dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" />

            <com.daylight.arcface_acs.view.InfoItemView
                android:id="@+id/middle_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/qmui_list_item_height"
                android:paddingBottom="6dp"
                android:paddingTop="6dp" />

        </LinearLayout>
    </ScrollView>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar_security"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:qmui_topbar_bg_color="@color/app_color_blue_2"
        app:qmui_topbar_title_color="@color/white"
        app:qmui_topbar_subtitle_color="@color/white" />

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>
